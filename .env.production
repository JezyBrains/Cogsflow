#--------------------------------------------------------------------
# Grain Management System - PRODUCTION Environment Configuration
# Domain: nipoagro.com
#--------------------------------------------------------------------

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------

CI_ENVIRONMENT = production

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

app.baseURL = 'https://nipoagro.com/'
app.forceGlobalSecureRequests = true
app.CSPEnabled = true

#--------------------------------------------------------------------
# DATABASE - PRODUCTION MySQL Configuration
#--------------------------------------------------------------------

database.default.hostname = localhost
database.default.database = nipoagro_cogsflow
database.default.username = nipoagro_user
database.default.password = REPLACE_WITH_SECURE_PASSWORD
database.default.DBDriver = MySQLi
database.default.DBPrefix = 
database.default.port = 3306

#--------------------------------------------------------------------
# ENCRYPTION - GENERATE SECURE KEY FOR PRODUCTION
#--------------------------------------------------------------------

encryption.key = REPLACE_WITH_GENERATED_ENCRYPTION_KEY

#--------------------------------------------------------------------
# SESSION - PRODUCTION Settings
#--------------------------------------------------------------------

session.driver = 'CodeIgniter\Session\Handlers\FileHandler'
session.cookieName = 'nipoagro_session'
session.expiration = 7200
session.savePath = null
session.matchIP = true
session.timeToUpdate = 300
session.regenerateDestroy = true

#--------------------------------------------------------------------
# LOGGER - PRODUCTION Logging
#--------------------------------------------------------------------

logger.threshold = 1

#--------------------------------------------------------------------
# MAIL CONFIGURATION - PRODUCTION
#--------------------------------------------------------------------

email.protocol = smtp
email.SMTPHost = mail.nipoagro.com
email.SMTPUser = noreply@nipoagro.com
email.SMTPPass = REPLACE_WITH_EMAIL_PASSWORD
email.SMTPPort = 587
email.SMTPCrypto = tls
email.mailType = html
email.charset = utf-8
email.wordWrap = true

#--------------------------------------------------------------------
# CUSTOM SETTINGS FOR GRAIN MANAGEMENT - PRODUCTION
#--------------------------------------------------------------------

# Company Information
app.companyName = 'Nipo Agro Limited'
app.companyEmail = 'info@nipoagro.com'
app.companyPhone = '+254-XXX-XXXXXX'
app.companyAddress = 'Nairobi, Kenya'

# System Settings
app.defaultCurrency = 'KES'
app.defaultTimezone = 'Africa/Nairobi'
app.lowStockThreshold = 20
app.maxUploadSize = 10485760
app.allowedFileTypes = 'jpg,jpeg,png,pdf,doc,docx,xls,xlsx'

# Security Settings
app.sessionTimeout = 7200
app.maxLoginAttempts = 5
app.lockoutDuration = 900

# Cache Settings
cache.storePath = WRITEPATH . 'cache/'
cache.ttl = 3600

# Backup Settings
backup.enabled = true
backup.frequency = 'daily'
backup.retention = 30
